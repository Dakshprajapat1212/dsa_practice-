                          i=0, ans=[]
                       /                 \
             include 1                  exclude 1
           ans=[1]                        ans=[]
          /       \                      /     \
   include 2    exclude 2         include 2   exclude 2
  ans=[1,2]       ans=[1]           ans=[2]      ans=[]
     |              |                |            |
  print            print           print        print
  [1,2]            [1]             [2]           []


if(i == arr.size()) {
    print(ans);
    return;
}

// INCLUDE current element
ans.push_back(arr[i]);
ps(arr, ans, i+1);
ans.pop_back(); // BACKTRACK

// EXCLUDE current element
ps(arr, ans, i+1);

